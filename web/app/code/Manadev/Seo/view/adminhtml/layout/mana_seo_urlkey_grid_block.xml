<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="mana.urlkey.grid.container">
            <block class="Magento\Backend\Block\Widget\Grid" name="mana.urlkey.grid" as="grid">
                <arguments>
                    <argument name="id" xsi:type="string">mana_urlkey_grid</argument>
                    <argument name="dataSource" xsi:type="object">Manadev\Seo\Resources\Collections\UrlKeyCollection</argument>
                    <argument name="default_sort" xsi:type="string">url_key</argument>
                    <argument name="default_dir" xsi:type="string">ASC</argument>
                    <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    <argument name="use_ajax" xsi:type="string">1</argument>
                    <argument name="grid_url" xsi:type="url" path="*/*/grid">
                        <param name="_current">1</param>
                    </argument>
                </arguments>
                <action method="setVarNameFilter">
                    <argument name="name" xsi:type="string">grid_filter</argument>
                </action>
                <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="mana.urlkey.grid.columnSet" as="grid.columnSet">
                    <arguments>
                        <argument name="rowUrl" xsi:type="array">
                            <item name="path" xsi:type="string">*/*/edit</item>
                            <item name="extraParamsTemplate" xsi:type="array">
                                <item name="id" xsi:type="string">getId</item>
                            </item>
                        </argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="url_key">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">URL Key</argument>
                            <argument name="index" xsi:type="string">url_key</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="column_css_class" xsi:type="string">col-url_key</argument>
                            <argument name="header_css_class" xsi:type="string">col-url_key</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="status">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Status</argument>
                            <argument name="index" xsi:type="string">status</argument>
                            <argument name="type" xsi:type="string">options</argument>
                            <argument name="options" xsi:type="options" model="Manadev\Seo\Enums\UrlKeyStatus"/>
                            <argument name="column_css_class" xsi:type="string">col-status</argument>
                            <argument name="header_css_class" xsi:type="string">col-status</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="position">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Position</argument>
                            <argument name="index" xsi:type="string">position</argument>
                            <argument name="type" xsi:type="string">int</argument>
                            <argument name="column_css_class" xsi:type="string">col-position</argument>
                            <argument name="header_css_class" xsi:type="string">col-position</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="store_id">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Store View</argument>
                            <argument name="index" xsi:type="string">store_id</argument>
                            <argument name="type" xsi:type="string">options</argument>
                            <argument name="options" xsi:type="options" model="Magento\Theme\Model\Scope\StoreSource"/>
                            <argument name="column_css_class" xsi:type="string">col-store_id</argument>
                            <argument name="header_css_class" xsi:type="string">col-store_id</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="type">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Type</argument>
                            <argument name="index" xsi:type="string">type</argument>
                            <argument name="type" xsi:type="string">options</argument>
                            <argument name="options" xsi:type="options" model="Manadev\Seo\Enums\UrlKeyType"/>
                            <argument name="column_css_class" xsi:type="string">col-type</argument>
                            <argument name="header_css_class" xsi:type="string">col-type</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="sub_type">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Sub Type</argument>
                            <argument name="index" xsi:type="string">sub_type</argument>
                            <argument name="type" xsi:type="string">options</argument>
                            <argument name="options" xsi:type="options" model="Manadev\Seo\Enums\UrlKeySubType"/>
                            <argument name="column_css_class" xsi:type="string">col-sub_type</argument>
                            <argument name="header_css_class" xsi:type="string">col-sub_type</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="description">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Description</argument>
                            <argument name="index" xsi:type="string">description</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="column_css_class" xsi:type="string">col-description</argument>
                            <argument name="header_css_class" xsi:type="string">col-description</argument>
                        </arguments>
                    </block>
                    <!--<block class="Magento\Backend\Block\Widget\Grid\Column" as="inferred_url_key">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Inferred</argument>
                            <argument name="index" xsi:type="string">inferred_url_key</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="column_css_class" xsi:type="string">col-inferred_url_key</argument>
                            <argument name="header_css_class" xsi:type="string">col-inferred_url_key</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="assigned_url_key">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Assigned</argument>
                            <argument name="index" xsi:type="string">assigned_url_key</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="column_css_class" xsi:type="string">col-assigned_url_key</argument>
                            <argument name="header_css_class" xsi:type="string">col-assigned_url_key</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="conflict_resolution">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Resolution</argument>
                            <argument name="index" xsi:type="string">conflict_resolution</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="column_css_class" xsi:type="string">col-conflict_resolution</argument>
                            <argument name="header_css_class" xsi:type="string">col-conflict_resolution</argument>
                        </arguments>
                    </block>-->
                    <block class="Magento\Backend\Block\Widget\Grid\Column" as="reference">
                        <arguments>
                            <argument name="header" xsi:type="string" translate="true">Reference</argument>
                            <argument name="index" xsi:type="string">reference</argument>
                            <argument name="type" xsi:type="string">text</argument>
                            <argument name="column_css_class" xsi:type="string">col-reference</argument>
                            <argument name="header_css_class" xsi:type="string">col-reference</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
