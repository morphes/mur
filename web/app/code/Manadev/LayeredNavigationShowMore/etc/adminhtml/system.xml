<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="mana_layered_navigation">
            <group id="show_more" translate="label" type="text" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Show More/Show Less Options</label>
                <field id="method" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Method of Showing All Options</label>
                    <source_model>Manadev\LayeredNavigationShowMore\Sources\MethodOfShowingItems</source_model>
                </field>
                <field id="item_limit" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Number of Always Shown Options</label>
                </field>
                <field id="effect_duration" translate="label comment" type="text" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Animation Duration</label>
                    <comment>Speed of sliding effect in milliseconds.</comment>
                </field>
                <field id="option_search" translate="label" type="select" sortOrder="400" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Show Option Search</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>