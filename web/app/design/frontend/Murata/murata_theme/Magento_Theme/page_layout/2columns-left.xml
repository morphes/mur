<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="empty"/>
    <referenceContainer name="main.content" htmlTag="div">
        <container name="columns.main" htmlClass="main-container col2-right-layout" htmlTag="div">
            <container name="columns.main.main" htmlClass="main" htmlTag="div">
                <container name="columns.main.content.wrap" htmlClass="content_wrap" htmlTag="div">
                    <container name="column.left" before="-"/>
                    <container name="column.right">
                        <container name="div.column.right.main" htmlTag="div" htmlClass="right_bar" after="main">
                            <container name="div.sidebar.comparing" htmlTag="div" htmlClass="m4-3b single-tab" before="-">
                                <container name="sidebar.comparing" as="sidebar_comparing" label="Sidebar Comparing"/>
                            </container>
                            <container name="div.sidebar.main" htmlTag="div" htmlClass="m4-3b single-tab" after="main">
                                <container name="sidebar.main" as="sidebar_main" label="Sidebar Main"/>
                            </container>
                            <container name="div.sidebar.additional" htmlTag="div" htmlClass="m4-3b single-tab" after="div.sidebar.main">
                                <container name="sidebar.additional" as="sidebar_additional" label="Sidebar Additional"/>
                            </container>
                        </container>
                    </container>
                </container>
            </container>
        </container>
    </referenceContainer>
</layout>
